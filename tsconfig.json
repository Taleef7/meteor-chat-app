// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "/*": ["*"],
      "meteor/*": [
        "node_modules/@types/meteor/*",
        ".meteor/local/types/packages.d.ts"
      ]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": true, // Important for Meteor
    "verbatimModuleSyntax": true, // The correct modern flag
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false // You can change this to true later for stricter checking
  },
  "include": [
    "imports/**/*.ts",
    "imports/**/*.js",
    "imports/**/*.svelte",
    "client/**/*.ts",
    "client/**/*.js",
    "client/**/*.svelte",
    "server/**/*.ts",
    "server/**/*.js",
    "*.ts",
    "*.js",
    "*.cjs",
    "*.mjs"
  ],
  "exclude": [
    "node_modules",
    ".meteor/**",
    "packages/**",
    "public/**"
  ]
}